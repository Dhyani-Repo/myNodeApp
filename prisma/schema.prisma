generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model testing_table_user{
  id        String    @id @unique @default(uuid())
  name      String
  age       Int
  gender    GENDER_ENUM_FOR_USER
  rollNo    Int       @unique
  email     String    @unique
  password  String    
  role      ACCESS_ROLE
}

model tokens {
  id        String    @id @unique @default(uuid())
  userId    String    @unique
  token     String
}


enum GENDER_ENUM_FOR_USER {
MALE
FEMALE
}

enum ACCESS_ROLE {
  ADMIN
  USER
  SUPER_ADMIN
}